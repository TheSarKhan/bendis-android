<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.ChangePasswordFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardVieww"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp">

            <ImageButton
                android:id="@+id/backbtnn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:src="@drawable/back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/backbtnn"
                android:layout_marginStart="17dp"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/backbtnn"
                app:layout_constraintStart_toEndOf="@id/backbtnn"
                android:text="@string/ChangePassword" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/cardVieww2"
        android:layout_height="350dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardVieww">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content" >

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/currentPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColorHint="@color/text_hint_color"
                app:boxStrokeColor="@color/main_color"
                app:cursorColor="@color/main_color"
                app:endIconDrawable="@drawable/eyeclose"
                app:layout_constraintStart_toStartOf="parent"
                app:endIconMode="password_toggle"
                app:hintTextColor="@color/main_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edittextCurrentPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:hint="@string/CurrentPassword"
                    android:inputType="text|textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/newPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/currentPassword"
                android:textColorHint="@color/text_hint_color"
                app:boxStrokeColor="@color/main_color"
                app:cursorColor="@color/main_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:endIconDrawable="@drawable/eyeclose"
                app:layout_constraintStart_toStartOf="parent"
                app:endIconMode="password_toggle"
                app:hintTextColor="@color/main_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edittextNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:hint="@string/NewPassword"
                    android:inputType="text|textPassword" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/againNewPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/newPassword"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColorHint="@color/text_hint_color"
                app:boxStrokeColor="@color/main_color"
                app:cursorColor="@color/main_color"
                app:endIconDrawable="@drawable/eyeclose"
                app:layout_constraintStart_toStartOf="parent"
                app:endIconMode="password_toggle"
                app:hintTextColor="@color/main_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edittextAgainNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:hint="@string/AgainNewPassword"
                    android:inputType="text|textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnUpdatePassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/main_color"
                android:fontFamily="@font/poppins"
                android:text="@string/Update"
                android:textColor="@color/app_logo_background"
                app:cornerRadius="5dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/againNewPassword"
                app:strokeColor="@color/main_color"
                app:strokeWidth="2dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>