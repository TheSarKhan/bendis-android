<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.view.ProfileFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/ToolbarProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/Profile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp">

                <ImageButton
                    android:id="@+id/BackImgButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:src="@drawable/back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/ProfileTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/SexsiMelumatlar"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/black"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toEndOf="@id/BackImgButton"
                    app:layout_constraintTop_toTopOf="@id/BackImgButton"
                    app:layout_constraintBottom_toBottomOf="@id/BackImgButton" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>

        <FrameLayout
            android:id="@+id/ProfileImageLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@id/ToolbarProfile">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/circle" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/user" />

        </FrameLayout>


        <TextView
            android:id="@+id/UploadImageTv"
            app:layout_constraintTop_toBottomOf="@id/ProfileImageLayout"
            android:layout_width="match_parent"
            android:textColor="#0D98FD"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/UploadImage" />


        <!-- TextInputLayouts -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/FirstNameTIL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            app:boxStrokeColor="@color/main_color"
            app:cursorColor="@color/main_color"
            app:endIconMode="clear_text"
            app:hintTextColor="@color/main_color"
            app:layout_constraintTop_toBottomOf="@id/UploadImageTv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/NameEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:hint="@string/Name"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/SurnameTIL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            app:boxStrokeColor="@color/main_color"
            app:cursorColor="@color/main_color"
            app:endIconMode="clear_text"
            app:hintTextColor="@color/main_color"
            app:layout_constraintTop_toBottomOf="@id/FirstNameTIL"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/SurnameEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:hint="@string/Surname"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/BirthDateTIL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            app:boxStrokeColor="@color/main_color"
            app:cursorColor="@color/main_color"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/arrow"
            app:hintTextColor="@color/main_color"
            app:layout_constraintTop_toBottomOf="@id/SurnameTIL"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/BirthDateEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:hint="@string/Birth"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/GenderTIL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            app:boxStrokeColor="@color/main_color"
            app:cursorColor="@color/main_color"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/arrow"
            app:hintTextColor="@color/main_color"
            app:layout_constraintTop_toBottomOf="@id/BirthDateTIL"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/GenderEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:hint="@string/Gender"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/EmailTIL2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            app:boxStrokeColor="@color/main_color"
            app:cursorColor="@color/main_color"
            app:endIconMode="clear_text"
            app:hintTextColor="@color/main_color"
            app:layout_constraintTop_toBottomOf="@id/GenderTIL"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EmailEt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:hint="@string/email"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/PhoneTIL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            app:boxStrokeColor="@color/main_color"
            app:cursorColor="@color/main_color"
            app:endIconMode="clear_text"
            app:hintTextColor="@color/main_color"
            app:layout_constraintTop_toBottomOf="@id/EmailTIL2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/PhoneEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:hint="@string/phone"
                android:inputType="phone" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/changePasswordMBtn"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:text="@string/ChangePassword2"
            app:layout_constraintStart_toStartOf="@id/PhoneTIL"
            android:textColor="@color/text_hint_color"
            app:backgroundTint="@android:color/transparent"
            app:cornerRadius="4dp"
            app:layout_constraintTop_toBottomOf="@id/PhoneTIL"
            app:strokeColor="@color/main_color"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/changeEmailMBtn"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="8dp"
            android:text="@string/ChangeEmail2"
            app:layout_constraintStart_toEndOf="@id/changePasswordMBtn"
            android:textColor="@color/text_hint_color"
            app:backgroundTint="@android:color/transparent"
            app:cornerRadius="4dp"
            app:layout_constraintTop_toBottomOf="@id/PhoneTIL"
            app:strokeColor="@color/main_color"
            app:strokeWidth="1dp" />
        <Button
            android:id="@+id/SaveBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/main_color"
            android:fontFamily="@font/poppins"
            android:text="@string/Save"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="50dp"
            app:cornerRadius="5dp"
            app:layout_constraintTop_toBottomOf="@id/changePasswordMBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
