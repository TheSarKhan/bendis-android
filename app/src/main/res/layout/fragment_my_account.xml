<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.profile.ProfileFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/MyAccountTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/MyAccount"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:fontFamily="@font/poppins" />

                <ImageButton
                    android:id="@+id/NotificationImgBtn"
                    android:layout_width="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toTopOf="@id/MyAccountTv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/MyAccountTv"
                    android:src="@drawable/notification" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>

        <View
            android:id="@+id/view1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/text_hint_color"            app:layout_constraintTop_toBottomOf="@id/toolbarProfile" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profileLayout"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view1" >

            <ImageView
                android:id="@+id/MyAccountImgBtn"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@android:color/transparent"
                android:src="@drawable/myaccount" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Profile"
                android:textSize="18sp"
                android:id="@+id/profileTv2"
                android:fontFamily="@font/poppins"
                android:textColor="@color/text_hint_color"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="30dp"
                app:layout_constraintBottom_toTopOf="@id/defaultUser"
                app:layout_constraintStart_toEndOf="@id/MyAccountImgBtn" />

            <TextView
                android:id="@+id/defaultUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/DefaultUser"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/profileTv2"
                app:layout_constraintTop_toBottomOf="@id/profileTv2" />

            <ImageView
                android:id="@+id/toProfilePageImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow2"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@android:color/transparent"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/MyOrdersLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileLayout">

            <ImageView
                android:id="@+id/boxImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/box"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/MyOrdersTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins"
                android:text="@string/MyOrders"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/boxImageView"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/toMyOrdersPageImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="15dp"
                android:background="@android:color/transparent"
                android:src="@drawable/arrow2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="70dp"
            android:background="@color/text_hint_color"            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/MyOrdersLayout" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/MyOperationLayout"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/MyOrdersLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" >

            <ImageView
                android:layout_width="30dp"
                android:id="@+id/OperationImageView"
                android:layout_height="30dp"
                android:src="@drawable/operations"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/OperationTv"
                android:text="@string/Operation"
                app:layout_constraintStart_toEndOf="@id/OperationImageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/toOperationPageImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow2"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@android:color/transparent"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/view3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="70dp"
            android:background="@color/text_hint_color"            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/MyOperationLayout" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/MyCommentLayout"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/MyOperationLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" >

            <ImageView
                android:layout_width="30dp"
                android:id="@+id/CommentImageView"
                android:layout_height="30dp"
                android:src="@drawable/star"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/CommentTv"
                android:text="@string/MyComment"
                app:layout_constraintStart_toEndOf="@id/CommentImageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/toCommentPageImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow2"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@android:color/transparent"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/view4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginStart="70dp"
            android:background="@color/text_hint_color"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/MyCommentLayout" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/MessageLayout"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/MyCommentLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" >

            <ImageView
                android:layout_width="30dp"
                android:id="@+id/MessageImageView"
                android:layout_height="30dp"
                android:src="@drawable/message"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/MessageTv"
                android:text="@string/Messages"
                app:layout_constraintStart_toEndOf="@id/MessageImageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/toMessagePageImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow2"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@android:color/transparent"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/view5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginStart="70dp"
            android:background="@color/text_hint_color"            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/MessageLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>